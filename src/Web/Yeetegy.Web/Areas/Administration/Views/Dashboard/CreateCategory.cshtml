@using Yeetegy.Common

@{
    ViewData["Title"] = "CreateCategory";
}
@model Yeetegy.Web.ViewModels.Administration.Dashboard.AddCategoryViewModel
<h1>CreateCategory</h1>

@if (User.IsInRole(GlobalConstants.AdministratorRoleName))
{
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-controller="Dashboard" asp-action="CreateCategory" enctype="multipart/form-data" id="BlobUploadForm" method="post" role="form">
                <div class="modal-footer">
                    <div class="form-group row">
                        <div class="container" style="margin-left: -15px">
                            <span class="badge badge-pill badge-danger" asp-validation-for="Category"></span>
                        </div>
                        <label asp-for="Category"></label>
                        <input asp-for="Category" class="form-control" maxlength="30" aria-label="With textarea" placeholder="Category Name" style="margin-bottom: 15px">

                        <div class="container" style="margin-left: -15px">
                            <span class="badge badge-pill badge-danger" asp-validation-for="File"></span>
                        </div>
                        <label asp-for="File" value="Category Picture"></label>
                        <div class="input-group">
                            <label class="">
                                <span class="btn YeetegyBackground text-white">
                                    Browse… <input asp-for="File" style="display: none;">
                                </span>
                            </label>
                            <input type="text" class="form-control" readonly="" id="BrowseInput">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <button type="submit" value="Upload Small File" class="btn btn-warning" id="UploadSmallFile">Create Category</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
}


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script type="text/javascript">
        $(document).on('change', ':file', function () {
            var input = $(this)
            var label = $('#BrowseInput').val(input.val().replace(/\\/g, '/').replace(/.*\//, ''));
        });
    </script>
}