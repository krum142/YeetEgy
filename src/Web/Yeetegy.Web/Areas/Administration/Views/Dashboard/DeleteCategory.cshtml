@using Yeetegy.Common

@{
    ViewData["Title"] = "DeleteCategory";
}
@model IEnumerable<SelectListItem>
<h1>DeleteAsyncCategory</h1>

@if (User.IsInRole(GlobalConstants.AdministratorRoleName))
{
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-controller="Dashboard" asp-action="DeleteCategory" enctype="multipart/form-data" id="BlobUploadForm" method="post" class="form-label-left" role="form">
                <div class="modal-footer">
                    <div class="form-group row">
                        <h3>Category Name</h3>
                    </div>
                    <div class="input-group mb-3">
                        <select asp-items="Model" class="custom-select" name="category"></select>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <button type="submit" value="Upload Small File" class="btn btn-warning" id="UploadSmallFile">Delete Category</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
}
